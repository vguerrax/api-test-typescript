{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "module": "CommonJS",
        "target": "esnext",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false,
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}